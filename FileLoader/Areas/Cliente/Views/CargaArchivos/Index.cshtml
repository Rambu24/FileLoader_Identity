@model IEnumerable<FileLoader.Models.DatosReporteCLS>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";    

    ChartJSCore.Models.Chart chart = (ChartJSCore.Models.Chart)ViewData["chart"];
    ChartJSCore.Models.Chart verticalBarChart = (ChartJSCore.Models.Chart)ViewData["VerticalBarChart"];
    int ConteoReportesTotal = ViewBag.ConteoReportesTotal;
}

@section Styles
    {
    <link href="~/lib/datatables.net-bs4/dataTables.bootstrap4.min.css" rel="stylesheet" />
}



<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                    <div class="card-body"><h3><strong>@ConteoReportesTotal</strong></h3>Reportes almacenados</div>              
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                    <div class="card-body"><h3><strong>@ConteoReportesTotal</strong></h3>Reportes Activos</div>               
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                    <div class="card-body"><h3><strong>@ConteoReportesTotal</strong></h3>Reportes Inactivos</div>                
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                 <div class="card-body"><h3><strong>@ConteoReportesTotal</strong></h3>Reportes Enviados</div>                 
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-area me-1"></i>
                    Histórico de reportes generados
                </div>
                @*<div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>*@
                    <div class="card-body"><canvas id="lineChart"></canvas></div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Histórico de reportes generados
                </div>
                    <div class="card-body"><canvas id="verticalBarChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Detalle de Reportes Almacenados
        </div>
        <div class="card-body">

                <table id="TableReportes" class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <td>Id Reporte</td>
                            <td>Nombre Reporte</td>
                            <td>Fecha Reporte</td>
                            <td>Fecha Registro</td>
                            <td>Usuario</td>
                        </tr>

                    </thead>
                    <tbody>

                        @foreach(var item in Model){
                            <tr>
                            <td>@item.Indice</td>
                            <td>@item.Catalogo_ReportesCLS.Nombre_Reporte</td>
                            <td>@item.Fecha_Reporte</td>
                            <td>@item.Fecha_Registro</td>
                            <td>@item.Usuario_Generador</td>
                        </tr>
                        }

                    </tbody>


                </table>
        </div>
    </div>
</div>


